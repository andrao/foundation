{
    "name": "foundation",
    "private": true,
    "scripts": {
        "build": "nx run-many -t build",
        "clean:top": "pnpm run nx:reset && git clean -xdf node_modules",
        "clean:workspaces": "nx run-many -t clean --verbose",
        "commit": "cz",
        "compose": "docker compose -f ./docker-compose.yml",
        "compose:deploy": "pnpm compose --profile deploy up --build",
        "compose:dev": "pnpm compose --profile dev up --build",
        "db:push": "pnpm -F db push",
        "db:studio": "pnpm -F db studio",
        "dev": "nx run-many -t dev --parallel 100",
        "format": "nx run-many -t format",
        "format:fix": "nx run-many -t format -- --write",
        "postinstall": "pnpm lint:mono",
        "install:clean": "pnpm run clean:workspaces && pnpm install",
        "jest": "node --no-warnings --experimental-vm-modules node_modules/jest/bin/jest.js",
        "jest:i": "RUN_JEST_INTEGRATION_TESTS=1 pnpm run jest",
        "lint": "nx run-many -t lint",
        "lint:fix": "nx run-many -t lint -- --fix",
        "lint:mono": "sherif",
        "mysql:local": "mysql -h 127.0.0.1 -P 7102 -u myuser -pmypassword -D mydb",
        "mysql:local:root": "mysql -h 127.0.0.1 -P 7102 -u root -prootpassword -D mydb",
        "nx:repair": "nx repair",
        "nx:reset": "nx reset",
        "prepare": "husky",
        "test": "nx run-many -t test",
        "test:ci": "nx run-many -t test:i -- --ci --runInBand",
        "test:i": "nx run-many -t test:i",
        "typecheck": "nx run-many -t typecheck",
        "welcome": "./tooling/welcome.sh"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "prettier": "@acme/prettier",
    "eslintConfig": {
        "extends": "./tooling/eslint/lib/base.js",
        "root": true
    },
    "devDependencies": {
        "@andrao/tsconfig": "^1.0.0",
        "@jest/globals": "29.7.0",
        "@playwright/test": "1.47.1",
        "@swc/jest": "0.2.36",
        "@types/jest": "29.5.13",
        "@types/node": "^20",
        "@types/react": "18.3.7",
        "@types/react-dom": "18.3.0",
        "commitizen": "4.3.0",
        "cz-conventional-changelog": "3.3.0",
        "dotenv-cli": "7.4.2",
        "husky": "9.1.6",
        "jest": "29.7.0",
        "nx": "19.7.4",
        "sass": "1.79.1",
        "sherif": "1.0.0",
        "typescript": "5.6.2",
        "wait-on": "8.0.1"
    },
    "packageManager": "pnpm@9.10.0",
    "engines": {
        "node": ">=20.10"
    },
    "pnpm": {
        "overrides": {
            "axios@>=0.8.1 <0.28.0": ">=0.28.0"
        }
    }
}
