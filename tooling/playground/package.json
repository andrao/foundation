{
    "name": "@acme/playground",
    "version": "0.1.0",
    "private": true,
    "main": "go.ts",
    "scripts": {
        "clean": "rm -rf .turbo node_modules",
        "format": "prettier --check . --ignore-path ../../.prettierignore",
        "go": "NODE_ENV=development pnpm with-env tsx ./src/go.ts",
        "jest": "pnpm run -C ../.. jest",
        "jest:i": "RUN_JEST_INTEGRATION_TESTS=1 pnpm run jest",
        "lint": "eslint .",
        "test": "pnpm run jest $PWD",
        "test:i": "pnpm run jest:i $PWD",
        "typecheck": "tsc --noEmit",
        "with-env": "dotenv -e ../../.env --"
    },
    "dependencies": {
        "@acme/db": "workspace:*",
        "@acme/db-api": "workspace:*",
        "@andrao/async": "1.0.0",
        "@andrao/llm-client": "*",
        "@t3-oss/env-nextjs": "0.11.1",
        "chalk": "4.1.2",
        "zod": "3.23.8"
    },
    "devDependencies": {
        "tsx": "4.16.5"
    }
}
