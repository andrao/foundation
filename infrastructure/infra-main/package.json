{
    "name": "@acme/infra-main",
    "type": "module",
    "main": "index.ts",
    "scripts": {
        "cli:production": "pnpm with-env pulumi stack select $npm_package_config_production && pnpm with-env pulumi",
        "cli:staging": "pnpm with-env pulumi stack select $npm_package_config_staging && pnpm with-env pulumi",
        "format": "prettier --check . --ignore-path ../../.prettierignore",
        "preview:production": "pnpm with-env pulumi preview -s $npm_package_config_production",
        "preview:staging": "pnpm with-env pulumi preview -s $npm_package_config_staging",
        "refresh:production": "pnpm with-env pulumi refresh -s $npm_package_config_production",
        "refresh:staging": "pnpm with-env pulumi refresh -s $npm_package_config_staging",
        "up:production": "pnpm with-env pulumi up -s $npm_package_config_production",
        "up:staging": "pnpm with-env pulumi up -s $npm_package_config_staging",
        "with-env": "dotenv -e ../../.env --"
    },
    "config": {
        "production": "production",
        "staging": "staging"
    },
    "dependencies": {
        "@acme/infra-constants": "workspace:*",
        "@pulumi/aws": "6.52.0",
        "@pulumi/aws-native": "0.123.0",
        "@pulumi/awsx": "2.15.0",
        "@pulumi/github": "6.3.0",
        "@pulumi/pulumi": "3.133.0",
        "cloudfront": "0.4.1"
    },
    "devDependencies": {
        "tsx": "4.19.1"
    }
}
