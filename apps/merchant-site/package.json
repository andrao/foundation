{
    "name": "merchant-site",
    "version": "0.1.0",
    "module": "dist/index.js",
    "scripts": {
        "astro": "astro",
        "build": "astro check && IS_ASTRO_BUILD=1 astro build",
        "clean": "git clean -xdf .next .turbo node_modules",
        "deploy": "docker compose -f ../../docker-compose.yml run --rm --build merchant-site",
        "dev": "IS_ASTRO_BUILD=1 astro dev",
        "format": "prettier --check . --ignore-path ../../.prettierignore",
        "jest": "pnpm run -C ../.. jest",
        "jest:i": "RUN_JEST_INTEGRATION_TESTS=1 pnpm run jest",
        "lint": "eslint .",
        "package": "pnpm -F merchant-site deploy build",
        "preview": "astro preview",
        "s3:sync": "aws s3 sync $PWD/dist s3://foundation-bucket-3208d26/merchant-site",
        "s3:sync:delete": "aws s3 sync --delete $PWD/dist s3://foundation-bucket-3208d26/merchant-site",
        "test": "pnpm run jest $PWD",
        "test:i": "pnpm run jest:i $PWD",
        "typecheck": "tsc --noEmit",
        "with-env": "dotenv -e ../../.env --"
    },
    "dependencies": {
        "@acme/db": "workspace:*",
        "@acme/db-api": "workspace:*",
        "@andrao/async": "1.0.0",
        "@andrao/tailwind": "1.2.0",
        "@andrao/tools": "1.1.0",
        "@astrojs/check": "0.9.3",
        "@astrojs/react": "3.6.2",
        "@astrojs/tailwind": "5.1.1",
        "@t3-oss/env-nextjs": "0.11.1",
        "astro": "4.15.7",
        "react": "18.3.1",
        "react-dom": "18.3.1",
        "zod": "3.23.8"
    },
    "devDependencies": {
        "@astrojs/ts-plugin": "1.10.2"
    }
}
