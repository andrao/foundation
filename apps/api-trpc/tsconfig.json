{
    "extends": "@andrao/tsconfig/base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~/*": ["./src/*"],
            "@ui/*": ["../../packages/core/browser/ui/src/*"]
        },
        "plugins": [{ "name": "next" }],
        "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json"
    },
    "include": ["src/env.js", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
