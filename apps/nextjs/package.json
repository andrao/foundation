{
    "name": "@acme/nextjs",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "pnpm with-env next build",
        "clean": "git clean -xdf .next .turbo node_modules",
        "dev": "pnpm with-env next dev --turbo",
        "format": "prettier --check . --ignore-path ../../.prettierignore",
        "jest": "pnpm run -C ../.. jest",
        "jest:i": "RUN_JEST_INTEGRATION_TESTS=1 pnpm run jest",
        "lint": "dotenv -v SKIP_ENV_VALIDATION=1 next lint",
        "start": "pnpm with-env next start",
        "test": "pnpm run jest $PWD",
        "test:i": "pnpm run jest:i $PWD",
        "typecheck": "tsc --noEmit",
        "with-env": "dotenv -e ../../.env --"
    },
    "eslintConfig": {
        "extends": [
            "../../tooling/eslint/lib/base.js",
            "../../tooling/eslint/lib/nextjs.js",
            "../../tooling/eslint/lib/react.js"
        ],
        "root": true
    },
    "dependencies": {
        "@acme/api": "workspace:*",
        "@acme/constants": "workspace:*",
        "@acme/paths": "workspace:*",
        "@acme/ui": "workspace:*",
        "@andrao/tailwind": "1.2.0",
        "@clerk/nextjs": "4.29.10",
        "@t3-oss/env-nextjs": "0.11.1",
        "@trpc/server": "next",
        "framer-motion": "11.5.4",
        "geist": "1.3.0",
        "next": "14.2.11",
        "next-themes": "0.3.0",
        "react": "18.3.1",
        "react-dom": "18.3.1",
        "zod": "3.23.8"
    }
}
