{
    "name": "@apps/vite",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "tsc -b && vite build",
        "clean": "git clean -xdf .next .turbo node_modules",
        "dev": "pnpm with-env vite --clearScreen=false",
        "format": "prettier --check . --ignore-path ../../.prettierignore",
        "jest": "pnpm run -C ../.. jest",
        "jest:i": "RUN_JEST_INTEGRATION_TESTS=1 pnpm run jest",
        "lint": "dotenv -v SKIP_ENV_VALIDATION=1 eslint .",
        "preview": "vite preview",
        "test": "pnpm run jest $PWD",
        "test:i": "pnpm run jest:i $PWD",
        "typecheck": "tsc --noEmit",
        "with-env": "dotenv -e ../../.env --"
    },
    "eslintConfig": {
        "extends": [
            "../../tooling/eslint/lib/base.js",
            "../../tooling/eslint/lib/react.js"
        ],
        "root": true
    },
    "dependencies": {
        "@acme/basic-api-client": "workspace:*",
        "@acme/paths": "workspace:*",
        "@t3-oss/env-nextjs": "0.11.1",
        "react": "18.3.1",
        "react-dom": "18.3.1",
        "zod": "3.23.8"
    },
    "devDependencies": {
        "@vitejs/plugin-react-swc": "3.7.0",
        "globals": "15.9.0",
        "vite": "5.4.6",
        "vite-tsconfig-paths": "5.0.1"
    }
}
