{
    "name": "@acme/express",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "module": "dist/index.js",
    "scripts": {
        "build": "pnpm with-env tsx build.ts",
        "clean": "git clean -xdf .next .turbo node_modules",
        "dev": "pnpm with-env tsx watch --clear-screen=false ./src/index.ts",
        "format": "prettier --check . --ignore-path ../../.prettierignore",
        "jest": "pnpm run -C ../.. jest",
        "jest:i": "RUN_JEST_INTEGRATION_TESTS=1 pnpm run jest",
        "lint": "eslint .",
        "start": "node dist/index.js",
        "test": "pnpm run jest $PWD",
        "test:i": "pnpm run jest:i $PWD",
        "typecheck": "tsc --noEmit",
        "with-env": "dotenv -e ../../.env --"
    },
    "dependencies": {
        "@acme/constants": "workspace:*",
        "@acme/paths": "workspace:*",
        "@t3-oss/env-nextjs": "0.11.1",
        "express": "4.19.2",
        "zod": "3.23.8"
    },
    "devDependencies": {
        "@acme/esbuild-workspace-externals": "workspace:*",
        "@types/express": "4.17.21",
        "@types/supertest": "6.0.2",
        "esbuild": "0.23.1",
        "supertest": "7.0.0",
        "tsx": "4.16.5"
    }
}
