        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "@acme/db": "workspace:*",
        "@acme/db-api": "workspace:*",
        "@acme/infra-constants": "workspace:*",
        "@andrao/async": "1.0.0",
        "@trpc/client": "next",
        "@trpc/server": "next",
        "superjson": "2.2.1",
        "zod": "3.23.8"
    },
    "devDependencies": {
        "next": "14.2.12"
    }
