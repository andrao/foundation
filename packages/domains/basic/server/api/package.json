{
    "name": "@acme/basic-api",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "exports": {
        ".": "./src/index.ts",
        "./transformer": "./transformer.ts"
    },
    "scripts": {
        "clean": "rm -rf .turbo node_modules",
        "format": "prettier --check . --ignore-path ../../../.prettierignore",
        "jest": "pnpm run -C ../../.. jest",
